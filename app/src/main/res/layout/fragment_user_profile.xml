<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserProfile">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_fragment_avatar_iv"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/profile_fragment_username_tv"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

        <Button
            android:id="@+id/profile_fragment_add_story_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_story" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:text="My Stories"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_fragment_user_stories"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>"

</FrameLayout>